<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomsListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Назад"
            android:onClick="onBackButton_RoomList"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_margin="10dp"
            android:text="create room"
            android:onClick="onCreateRoomListButton"/>
    </LinearLayout>



    <ScrollView
        android:id="@+id/RoomsListScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:layout_gravity="bottom"
        android:background="@color/colorDarkBlue"
        android:foregroundGravity="left|bottom"
        android:isScrollContainer="true"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <LinearLayout
            android:id="@+id/mainRoomListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>